.my-4.rounded.admin-visit-status-confirmed
  .flex.flex-wrap.px-5.pt-3
    .w-full
      .flex.flex-wrap.sm:flex-no-wrap.text-xs
        .w-full
          .text-gray-500= visit.decorate.display_visited_at_in_hosts_time_zone
        .w-full.sm:text-right
          .text-status-confirmed= visit.decorate.display_status
    .w-full.mt-1
      .text-2xl= visit.token
    .w-full.mt-1.mb-3
      .flex
        .flex-auto
          .text-pink-600.text-xs.tracking-wider
            - if visit.name.present?
              = "#{visit.name} | "
            = visit.decorate.display_contact_scrambled_full
    .w-full
      .text-sm= visit.notes
