.text-sm
  - if controller_name != 'sessions'
    .my-3
      = link_to "Sign in", new_session_path(resource_name), class: 'shy-link'

  - if devise_mapping.registerable? && controller_name != 'registrations'
    .my-3
      = link_to "Sign up", new_registration_path(resource_name), class: 'shy-link'

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    .my-3
      = link_to "Forgot your password?", new_password_path(resource_name), class: 'shy-link'

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    .my-3
      = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'shy-link'

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    .my-3
      = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'shy-link'

  - if devise_mapping.omniauthable?
    .my-3
      - resource_class.omniauth_providers.each do |provider|
        = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'shy-link'
