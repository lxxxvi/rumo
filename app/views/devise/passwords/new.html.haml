.text-center.mt-20.mb-4
  %h1.text-4xl.text-indigo-600.px-4
    = t('shared.forgot_your_password_question')

%section.bg-gradient-to-r.from-indigo-600.to-indigo-500.via-indigo-700.pt-12.pb-6.px-4
  .container.mx-auto
    .w-full.mx-auto{ class: 'md:w-1/2' }
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        .my-8
          = f.label :email, class: 'text-white text-xs tracking-wide'
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full', placeholder: t('.email_placeholder')
          = render 'shared/forms/field_error_messages', form: resource, column: :email

        .actions.my-8.text-right
          = link_to t('shared.cancel'), root_path, class: 'mr-6 text-gray-400  hover:text-white'
          = f.button t('.reset_password'), type: :submit, class: 'inline-flex items-center px-10 py-3 border border-transparent text-base leading-6 font-medium text-indigo-900 bg-white hover:bg-indigo-400 hover:text-white focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-200'

      .my-8.text-right
        .w-full
          = link_to t('shared.sign_in'), new_session_path(resource_name), class: 'text-white hover:text-indigo-300 transition duration-100 ease-in-out'

        .w-full.mt-2
          = link_to t('shared.sign_up'), new_registration_path(resource_name), class: 'text-white hover:text-indigo-300 transition duration-100 ease-in-out'
