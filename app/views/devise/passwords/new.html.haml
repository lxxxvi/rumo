.text-center
  %h2 Forgot your password?
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .mb-8
      = f.label :email, class: 'text-gray-500 text-xs tracking-wide'
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-text'
      = render 'shared/forms/field_error_messages', form: resource, column: :email
    .actions.my-8
      = f.submit "Reset password", class: 'input-submit'
  = render "devise/shared/links"
